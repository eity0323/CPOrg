<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="@color/basic_topbar_bg_color" >

    <LinearLayout
        android:id="@+id/ly_title_bar_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:minWidth="@dimen/basic_topbar_item_minwidht" >

        <TextView
            android:id="@+id/tv_title_bar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/im_selector_common_tab_bg"
            android:drawableLeft="@drawable/base_back_bg"
            android:drawablePadding="3dp"
            android:duplicateParentState="true"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/im_color_white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_title_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:minWidth="@dimen/basic_topbar_item_minwidht"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_title_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/im_selector_common_tab_bg"
            android:duplicateParentState="true"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="@color/basic_title_text"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_title_bar_center"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/ly_title_bar_right"
        android:layout_toRightOf="@id/ly_title_bar_left"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_title_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/basic_title_text"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>